{% extends '@AutorentoolUser/layout.html.twig' %}

{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}

    <div class="login-container">
        <img src="{{ asset('img/logo.png') }}">
        <div class="login-form">
            <h3 class="onl_authTitle" data-toggle="tooltip" data-placement="bottom" title="Recommended: Lumen Theme"><span class="glyphicon glyphicon-log-in"></span> Anmelden</h3>

            {% if error %}
                <div class="alert alert-danger fade in">
                    <a href="#" class="close" data-dismiss="alert">&times;</a>
                    <strong>Error!</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form class="onl_loginForm" action="{{ path("fos_user_security_check") }}" autocomplete="off" method="POST">
                <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.refreshToken('authenticate') }}" />

                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                    <input type="text" class="form-control" id="username" name="_username" placeholder="Benutzername oder Email" value="{{ last_username }}" required="required" />
                </div>

                <span class="help-block"></span>

                <div class="input-group input-group-password">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                    <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="Password"/>
                </div>

                <span class="help-block"></span>

                {#<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

                <span class="help-block"></span>#}

                <input type="submit" class="btn btn-lg btn-primary btn-block" value="{{ 'security.login.submit'|trans }}" />
            </form>


            <div class="login-help">
                <span class="help-block"></span>
                <a href="{{ path('fos_user_resetting_request') }}">Passwort vergessen?</a>
            </div>
        </div>
    </div>

{% endblock fos_user_content %}
